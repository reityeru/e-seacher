<div class="shop-user-form-box-inner">
    <%= form_with(model: shop_user_tweet, local: true) do |f| %>
    <%= render 'shared/error_messages', model: f.object %>
      <%# 口コミ入力欄 %>
      <div class="shop-user-tweet-text">
      <label>お店からのお知らせ</label>
        <span class="indispensable">必須</span><br />
        <%= f.text_area :text, placeholder:"例) 営業時間を変更します。", maxlength:"300" %>
      </div>
      <%# 画像選択欄 %>
      <div class="main-user-tweet-image">
        <label>画像</label>
        <span class="indispensable">任意</span><br />
        <%= f.file_field :shop_user_tweet_images, multiple: true %>
      </div>
      <%= f.submit "投稿" %>
    <% end %>
  </div>