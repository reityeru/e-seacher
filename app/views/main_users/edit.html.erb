<div class="edit-box">
  <h1>一般ユーザー情報編集</h1>
  <div class="edit-box-inner">
    <%= form_with model: main_user local: true do |f| %>
    <%= render "main_users/shared/error_messages", resource: resource %>
      <%# ユーザー名入力欄 %>
      <div class="edit-box-nickname">
        <label>ユーザー名</label>
        <span class="indispensable">必須</span><br />
        <%= f.text_field :nickname, autofocus: true, placeholder:"例) test太郎" %>
      </div>
      <%# メールアドレス入力欄 %>
      <div class="edit-box-email">
        <label>メールアドレス</label>
        <span class="indispensable">必須</span><br />
        <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
      </div>
      <%# 電話番号入力欄 %>
      <div class="edit-box-phonenumber">
        <label>電話番号</label>
        <span class="indispensable">必須</span><br />
        <%= f.text_field :phone_number, placeholder:"例）09012345678", maxlength:"11"%>
      </div>
      <%# プロフィール入力欄 %>
      <div class="edit-box-profile">
        <label>プロフィール</label>
        <span class="indispensable">任意</span><br />
        <%= f.text_area :profile,  maxlength:"300"%>
      </div>
      <%# 新規登録ボタン %>
      <div class="actions">
        <%= f.submit "保存" %>
      </div>
    <% end %>
  </div>
</div>

