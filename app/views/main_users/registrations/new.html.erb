<div class="singup-box">
  <h1>一般ユーザー新規登録</h1>
  <div class="singup-box-inner">
    <%= form_with model: @main_user, url: main_user_registration_path, local: true do |f| %>
    <%= render "main_users/shared/error_messages", resource: resource %>
      <%# ユーザー名入力欄 %>
      <div class="singup-box-nickname">
        <label>ユーザー名</label>
        <span class="indispensable">必須</span><br />
        <%= f.text_field :nickname, autofocus: true, placeholder:"例) test太郎", maxlength:"40" %>
      </div>
      <%# メールアドレス入力欄 %>
      <div class="singup-box-email">
        <label>メールアドレス</label>
        <span class="indispensable">必須</span><br />
        <%= f.email_field :email, placeholder:"PC・携帯どちらでも可" %>
      </div>
      <%# パスワード入力欄 %>
      <div class="singup-box-password">
        <label>パスワード</label>
        <span class="indispensable">必須</span><br />
        <%= f.password_field :password, placeholder:"6文字以上の半角英数字" %>
        <p>※英字と数字の両方を含めて設定してください</p>
      </div>
      <%# パスワード（確認用）入力欄 %>
      <div class="singup-box-password">
        <label>パスワード（確認）</label>
        <span class="indispensable">必須</span><br />
        <%= f.password_field :password_confirmation, placeholder:"同じパスワードを入力して下さい" %>
      </div>
      <%# 本名入力欄 %>
      <div class="singup-box-name">
        <label>お名前（全角）</label>
        <span class="indispensable">必須</span><br />
          <%= f.text_field :last_name, placeholder:"例) 山田" %>
          <%= f.text_field :first_name, placeholder:"例) 太郎" %>
      </div>
      <%# 本名入力欄（カナ） %>
      <div class="singup-box-namekana">
        <label>お名前（カナ）</label>
        <span class="indispensable">必須</span><br />
          <%= f.text_field :last_name_kana, placeholder:"例) ヤマダ" %>
          <%= f.text_field :first_name_kana, placeholder:"例) タロウ" %>
      </div>
      <%# 性別選択 %>
      <div class="singup-box-gender">
        <p>性別</p>
        <label><%= f.radio_button :gender, "男性" %>男性</label>
        <label><%= f.radio_button :gender, "女性" %>女性</label>
      </div>
      <%# 生年月日入力欄 %>
      <div class="singup-box-birthday">
        <div>
          <label>>生年月日</label>
          <span class="indispensable">必須</span><br />
        </div>
        <div class="birthday-select">
          <%= raw sprintf(
                   f.date_select(
                      :birthday,
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1930,
                      end_year: (Time.now.year - 5),
                      date_separator: '%s'),
                   "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
        </div>
      </div>
      <%# 電話番号入力欄 %>
      <div class="singup-box-phonenumber">
        <label>電話番号</label>
        <span class="indispensable">必須</span><br />
        <%= f.text_field :phone_number, placeholder:"例）09012345678", maxlength:"11"%>
      </div>
      <%# プロフィール入力欄 %>
      <div class="singup-box-profile">
        <label>プロフィール</label>
        <span class="indispensable">任意</span><br />
        <%= f.text_area :profile,  maxlength:"300"%>
      </div>
      <%# 新規登録ボタン %>
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
  </div>
</div>

